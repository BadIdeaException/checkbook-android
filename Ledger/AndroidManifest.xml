<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="heger.christian.ledger"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
	<uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
	<uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
	
	<!-- Only needed for testing -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
	
	<application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="heger.christian.ledger.ui.spreadsheet.SpreadsheetActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBarTitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="heger.christian.ledger.ui.entry.EntryActivity"
            android:label="@string/title_activity_entry"
            android:parentActivityName="heger.christian.ledger.ui.spreadsheet.SpreadsheetActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="heger.christian.ledger.ui.SpreadsheetActivity" />
        </activity>

        <activity
            android:name="heger.christian.ledger.ui.categories.CategoriesActivity"
            android:label="@string/title_activity_category"
            android:parentActivityName="heger.christian.ledger.ui.spreadsheet.SpreadsheetActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="heger.christian.ledger.ui.spreadsheet.SpreadsheetActivity" />
        </activity>
        <activity
            android:name="heger.christian.ledger.ui.rules.RulesActivity"
            android:label="@string/title_activity_rules"
            android:parentActivityName="heger.christian.ledger.ui.spreadsheet.SpreadsheetActivity"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="heger.christian.ledger.ui.SpreadsheetActivity" />
        </activity>
        <activity
            android:name="heger.christian.ledger.ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>

        <provider
            android:name="heger.christian.ledger.providers.LedgerContentProvider"
            android:authorities="heger.christian.ledger.providers.ledgercontentprovider"
            android:exported="false" >
        </provider>
        <provider
            android:name="heger.christian.ledger.providers.MetaContentProvider"
            android:authorities="heger.christian.ledger.meta"
            android:exported="false" >
        </provider>
        
        <!-- Account authentication service -->
		<service 
		    android:name=".accounts.AuthenticatorService">
			<intent-filter>
				<action android:name="android.accounts.AccountAuthenticator" />
			</intent-filter>
			<meta-data 
			    android:name="android.accounts.AccountAuthenticator" 
			    android:resource="@xml/authenticator" />
		</service>
		<!-- Data sync service -->
		<service
			android:name=".sync.SyncService"
			android:exported="true"
			android:process=":sync">
		<intent-filter>
		    <action android:name="android.content.SyncAdapter"/>
		</intent-filter>
		<meta-data 
			android:name="android.content.SyncAdapter"
			android:resource="@xml/syncadapter" />
		</service>
		
	</application>

</manifest>